<nav class="ml-5 block lg:hidden">
  <div class="flex space-x-4">
    <a href="/contatti" class={`${navigationItemsBaseClass} ${activeNav === "news" ? "font-bold" : "font-medium"}`}>MENU</a>
  </div>
</nav>